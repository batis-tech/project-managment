<div class="card">
  <h2 class="card-header d-flex justify-content-between">
    <span>Projects</span>
    <%= link_to 'New Project', new_project_path, class:"btn btn-primary" %>
  </h2>
    <% @projects.each do |project| %>
    <%= link_to project, class: "text-decoration-none" do %>
    <div class="card">
      <div class="card-body">
        <div class="mb-3">
          <%= render(ProgressBadgeComponent.new(status: project.status)) do %>
            <%= project.status %>
            <% end %>
          <span class="text-secondary"><small> <%= project.percent_complete %>% complete
         (<%= project.total_task_complete %>/<%=project.total_task %> tasks)</small></span>
        </div>
        <h4 class="card-title text-dark"><%= project.name %></h4>
        <h5 class="card-title text-secondary"><%= project.description %></h5>
      </div>
    </div>
    <% end %>
    <% end %>
</div>
<br>
